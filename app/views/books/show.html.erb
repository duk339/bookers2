<div class="col-md-3">
<%= render 'users/info', user: @user %>
<%= render 'new', books: @books %>
</div>
<div class="offset-md-1"></div>

<div class="col-md-8">
  <h2>Book detail</h2>
  <table class="table">
    <tr>
    <td><%= link_to  user_path do %><%= image_tag @book.user.get_image(100,100) %><br><%= @book.user.name %><% end %></td>
    <td><%= link_to @book.title, book_path %></td>
    <td><%= @book.body %></td>
    <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book) %></td>
      <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    <% end %>
    </tr>
    </table>
</div>